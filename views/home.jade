extends main

block header
	script(src='/socket.io/socket.io.js')
	script(src='/js/chat.js')
block content
	div(class='center-block box-chat')
		div(class='thumbnail room')
			div(class='form-control' id='content')
				
		div(class='thumbnail content')
			div(class='form-control listroom' id="rooms")
			button(class='btn btn-info btn-addrom' onclick='javascript:Chat.addRoom()') Add room
		div(class='thumbnail msg-content')
			form(action='javascript:Chat.send({msg: $("#msg").val(), color: $("#color").val(), style: $("#style").val()}); $("#msg").val("");')
				input(id='msg', placeholder='Type your text', class='form-control list')
				div(class='control-bar')
					select(id='color', class='form-control')
						option(value='black', style='color: black;') Black
						option(value='blue', style='color: blue;') Blue
						option(value='red', style='color: red;') Red
						option(value='green', style='color: green;') Green
					select(id='style', class='form-control')
						option(value='normal') Normal
						option(value='bold') Bold
						option(value='initial') Initial
				input(type='submit', class='btn btn-default', value='Send')
	script $(document).ready(function(){Chat.init();});